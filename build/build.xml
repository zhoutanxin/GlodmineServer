<?xml version="1.0"?>
<project name="core" default="pack" basedir="../">
	<property file="build/build.properties" /> 
	
	<!--要编译的类目录-->
	<property name="build.dir"  value="${tempdir}/classes" />
	<path id="JAVA.rt">  
	     <pathelement location="/usr/local/java/jdk1.7.0_79/jre/lib/rt.jar" />  
	</path> 
	<!--classpath-->
	<path id="buildpath">
			<path refid="JAVA.rt" /> 
	    	<fileset dir="WebContent/WEB-INF/lib">
	    		  <include name="**/*.jar"/>   
			</fileset>
	    	<fileset dir="WebContent/WEB-INF/jars">
	    		  <include name="**/*.jar"/>   
			</fileset>	   
		    <dirset dir="${build.dir}">   
		    </dirset>  		  	
	</path>
	
	<!--编译-->
    <target name="compile" >
    	
    	<!--创建编译目录-->
    	<mkdir dir="${build.dir}"/>
    	
    	<!--编译src目录下的类文件-->
        <javac srcdir="." destdir="${build.dir}/"  includeantruntime="false" debug="true">
        	<compilerarg line="-XDignore.symbol.file"/>
        	<classpath refid="buildpath"></classpath>
        	<include name="**/framework/**"/>
        	<include name="**/glodmine/**"/>
        </javac>


    </target>
	
	

	
		 	
	<!--测试-->
	<target name="test" depends="compile">
		<junit printsummary="yes" haltonfailure="yes">
		  <classpath refid="buildpath"></classpath>
		  <formatter type="plain"/>
		  <batchtest fork="yes">
		    <!--fileset dir="test/com/doadway">
		      <include name="**/*Test*.java"/>
		    </fileset>
		    -->
		  </batchtest>
		</junit>
	</target>
	
	<!--部署-->
    <target name="deploy" depends="test"  >
    	<!--部署至web服务器-->
		 <copy todir="${server.web}">
		      <fileset dir="WebContent" >
		      </fileset>	
		 </copy>
    	<!--部署配置至服务器-->
		 <copy todir="${build.dir}">
		      <fileset dir="。/">
		      	<include name="**/spring/**"/>	
		      	<include name="resource"/>	
		      </fileset>
		 </copy>
    </target>	
	
	<!--独立版打war包至下载目录-->
	<target name="pack" depends="deploy">
    	<!--创建下载目录-->
    	<mkdir dir="${server.download}/${version}"/>
		<war destfile="${server.download}/${version}/glodmine.war" webxml="WebContent/WEB-INF/web.xml">
		  <fileset dir="WebContent" >
		  </fileset>
		  <classes dir="${build.dir}"/>
		</war>		 
	</target>
	

</project>