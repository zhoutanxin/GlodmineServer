<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

	<!-- classPathEntry:数据库的JDBC驱动,换成你自己的驱动位置 -->
	<classPathEntry location="D:\MyEclipseWorkSpace\springmvc_mybatis_new\WebRoot\WEB-INF\lib\mysql-connector-java-5.1.8-bin.jar" />
	<context id="DB2Tables" targetRuntime="MyBatis3">
		
		<!-- 去除自动生成的注释 -->
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
		</commentGenerator>

		<!-- 数据库驱动 -->
		<jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://10.12.32.133:3306/b2c_online" userId="superuser" password="superuserpasswd">
		</jdbcConnection>
		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<!-- targetProject:自动生成POJO代码的位置 -->
		<javaModelGenerator targetPackage="cn.ce.comment.model"
			targetProject="D:\MyEclipseWorkSpace\springmvc_mybatis_new\src\main\java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- targetProject:自动生成Sql Mapper.xml代码的位置 -->
		<sqlMapGenerator targetPackage="mapper"
			targetProject="D:\MyEclipseWorkSpace\springmvc_mybatis_new\src\main\resource">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- targetProject:自动生成DAO代码的位置 -->
		<javaClientGenerator type="XMLMAPPER"
			targetPackage="cn.ce.comment.dao" targetProject="D:\MyEclipseWorkSpace\springmvc_mybatis_new\src\main\java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>
		

		<!-- tableName:用于自动生成代码的数据库表；domainObjectName:对应于数据库表的javaBean类名 -->
		<!--  配置相关表映射  -->
		<table tableName="KNOWLEDGE_COMMENT" domainObjectName="Comment" enableSelectByExample="true"/>

	</context>
</generatorConfiguration>
